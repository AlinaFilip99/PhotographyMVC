@model Photography.ViewModels.PhotoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="photo.Id" />
            <div class="form-group">
                <label asp-for="photo.Picture" class="control-label"></label>
                <input type="file" name="PictureFile" required />
            </div>
            <div class="form-group">
                <label asp-for="photo.PostId" class="control-label"></label>
                <select asp-for="photo.PostId" class="form-control" asp-items="ViewBag.PostId"></select>
                <span asp-validation-for="photo.PostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
