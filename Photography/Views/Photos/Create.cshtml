@model Photography.ViewModels.PhotoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="photo.Picture" class="control-label"></label>
                <input type="file" name="PictureFile" required />
            </div>
            <div class="form-group">
                <label asp-for="photo.PostId" class="control-label"></label>
                <select asp-for="photo.PostId" class ="form-control" asp-items="ViewBag.PostId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
