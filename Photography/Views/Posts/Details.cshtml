@model Photography.ViewModels.PostPhotosCommentsViewModel

@{
    ViewData["Title"] = "PostDetails";
}

<h1>Post</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.post.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.post.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.post.Likes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.post.Likes)
        </dd>
</div>
<div>
    <h3>Photos:</h3>
</div>
<div>
    @foreach (var item in Model.photos)
    {
        <img src="@Url.Content(item.Picture)" style="width: 350px;height: auto;padding: 30px 12px;" alt="photo" />
    }
</div> 
<div>
    <h3>Comments:</h3>
</div>
<br />
<br />
<table class="table">
    <tbody>
        @foreach (var item in Model.comments)
        {
            <tr>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.CommMessage)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-route-id="@Model.post.AccountId">Back to Posts</a>
</div>
