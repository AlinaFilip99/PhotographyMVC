@model Photography.ViewModels.PostPhotosCreate

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row bg-white rounded">
    <div class="col-md-4">
        <form class="p-4" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Description: </label>
                <input type="text" asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Photos: </label>
                <input type="file" multiple asp-for="pictureFiles" class="form-control-file" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary border-0 d-inline-block" style="background: #6f95f8;cursor: pointer;color: white;" />
                <a asp-controller="Accounts" asp-action="Profile" class="btn btn-primary border-0 d-inline-block" style="background: #6f95f8;cursor: pointer;color: white;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
