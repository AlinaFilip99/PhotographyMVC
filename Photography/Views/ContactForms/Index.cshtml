@model IEnumerable<Photography.ApplicationLogic.Models.ContactForm>

@{
    ViewData["Title"] = "ContactForms";
}
<div class="d-block w-100 bg-white rounded">
    <h1 class="p-3">Forms</h1>

    <form class="p-3" asp-action="Index" method="get">
        <input type="text" name="searchString" placeholder="Search" />
        <input type="submit" value="Search" />
        <a asp-action="Index">Full List</a>
    </form>
    <div class="p-3">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        @Html.ActionLink("DataF", "Index", new { sortOrder = ViewBag.DateSortParm })
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrenumeF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataF)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

