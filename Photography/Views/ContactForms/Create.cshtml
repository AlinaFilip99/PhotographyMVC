@model Photography.ApplicationLogic.Models.ContactForm

@{
    ViewData["Title"] = "Create";
}
<hr />
<div class="row bg-white rounded">
    <div class="col-md-4">
        <form class="p-4" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeF" class="control-label"></label>
                <input asp-for="NumeF" class="form-control" />
                <span asp-validation-for="NumeF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrenumeF" class="control-label"></label>
                <input asp-for="PrenumeF" class="form-control" />
                <span asp-validation-for="PrenumeF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DataF" value="@DateTime.Now" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
